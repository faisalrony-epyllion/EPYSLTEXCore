<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
}

<div id="@pageId">
    <div class="row" id="@divTblId">
        <div class="col-sm-12 toolBar-parent-div">
            <div id="@toolbarId">
                <button id="btnPending" class="btn btn-success text-white btn-sm">
                    <i class="fa fa-plus"></i>&nbsp;New QC Receive
                </button>
                <button id="btnList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-list"></i>&nbsp;QC Receive Lists
                </button>
                @*<button id="btnAllList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-list"></i>&nbsp;ALL
                </button>*@
            </div>
        </div>
        <div class="col-sm-12" style="font-size:12px">
            <table id="@tblMasterId"></table>
        </div>
    </div>
    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="QCReceiveMasterID" name="QCReceiveMasterID" value="-1111" />
            <input type="hidden" name="QCReqMasterId" id="QCReqMasterId" />
            <input type="hidden" name="QCIssueMasterId" id="QCIssueMasterId" />
            <input type="hidden" id="LocationId" name="LocationId" />
            <input type="hidden" id="CompanyId" name="CompanyId" />
            <input type="hidden" id="RCompanyId" name="RCompanyId" />
            <input type="hidden" id="SupplierId" name="SupplierId" />
            <input type="hidden" id="SpinnerId" name="SpinnerId" />
            <input type="hidden" id="EntityState" name="EntityState" value="4" />

            <div class="card card-default" id="@divDetailsId" style="display:none">

                <div class="card-body">
                    <div class="card" style="border-color:transparent; border-style:none;">
                        <div class="card-header">
                            <h3 class="card-title"> General/Commercial Information </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <!-- Row 1 -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Receive No</label>
                                        <input id="QCReceiveNo" name="QCReceiveNo" class="form-control form-control-sm" value="**<< NEW >>**" readonly />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Requisition No
                                            <i id="btnReport" class="fa fa-file-pdf-o" aria-hidden="true" style="cursor:pointer;" title="View QC Requisition Report"></i>
                                        </label>

                                        <input id="QCReqNo" name="QCReqNo" class="form-control input-sm" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Receive Date</label>
                                        <input id="QCReceiveDate" name="QCReceiveDate" class="form-control input-sm ej2-datepicker" readonly />
                                    </div>
                                </div>
                               
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Requisition Date</label>
                                            <input id="QCReqDate" name="QCReqDate" class="form-control input-sm" readonly />
                                        </div>
                                    
                                    <div class="form-group">
                                        <label>Issue No</label>
                                        <input id="QCIssueNo" name="QCIssueNo" class="form-control input-sm" readonly />
                                    </div>
                                   

                                    <div class="form-group">
                                        <label>Issue Date</label>
                                        <input id="QCIssueDate" name="QCIssueDate" class="form-control input-sm" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>      
                </div>
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            Item Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblChildId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box-footer btn-e-float-margin" id="divFormButtons">
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <button type="button" class="btn btn-default m-w-120" id="btnCancel"><i class="fa fa-angle-double-left"></i>&nbsp;Back to List</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnSave"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
