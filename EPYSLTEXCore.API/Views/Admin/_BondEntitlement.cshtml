<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
    localStorage.setItem("menuParam", "@ViewBag.MenuParam");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
}
<style type="text/css">
    .cbo {
        font-size: 16px !important;
    }
</style>
<div id="@pageId">
    <div class="row" id="@divTblId">
        <div class="col-sm-12">
            <div id="@toolbarId">
                <button id="btnNew" class="btn btn-default text-grey btn-sm btnToolBar">
                    <i class="fa fa-plus"></i>&nbsp;Create New
                </button>
                <button id="btnList" class="btn btn-success btn-sm btnToolBar">
                    <i class="fa fa-list"></i>&nbsp;List
                </button>
            </div>
        </div>
        <div class="col-sm-12" style="font-size:12px">
            <table id="@tblMasterId"></table>
        </div>
    </div>
    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="BondEntitlementMasterID" name="BondEntitlementMasterID" value="-1111" />

            <div class="box-body" id="@divDetailsId" style="display:none;">
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            General Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Company</label>
                                        <div class="col-sm-8">
                                            <select id="CompanyID" name="CompanyID" class="form-control form-control-sm" style="width:100%"></select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Bond Licence No</label>
                                        <div class="col-sm-8">
                                            <input id="BondLicenceNo" name="BondLicenceNo" class="form-control form-control-sm" />
                                        </div>
                                    </div>

                                     <div class="form-group">
                                        <label class="control-label col-sm-4 small">EBIN No</label>
                                        <div class="col-sm-8">
                                            <input id="EBINNo" name="EBINNo" class="form-control form-control-sm" />
                                        </div>
                                    </div>

                                </div>

                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">From Date</label>
                                        <div class="col-sm-8">
                                            <input id="FromDate" name="FromDate" class="form-control input-sm ej2-datepicker" />
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">To Date</label>
                                        <div class="col-sm-8">
                                            <input id="ToDate" name="ToDate" class="form-control input-sm ej2-datepicker" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Currency</label>
                                        <div class="col-sm-8">
                                            <select id="CurrencyID" name="CurrencyID" class="form-control form-control-sm" style="width:100%"></select>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color: transparent; border-style: none;">
                        <div class="panel-heading">
                            Item Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblChildId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box-footer btn-e-float-margin" id="divFormButtons">
                    <div class="pull-right">
                        <button type="button" class="btn btn-default m-w-120 mr-2" id="btnBackToList"><i class="fa fa-angle-double-left"></i>&nbsp;Back to List</button>
                        <button type="button" class="btn btn-primary m-w-120 btnAction mr-2" id="btnSave"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
