<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var tblColorChildId = "tblColorChild" + pageId;
    var tblFabricItemId = "tblFabricItem" + pageId;
    var tblOtherItemId = "tblOtherItem" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
    var modalYarnItemCopyID = "modalYarnItemCopyID" + pageId;
    var tblYarnItemCopyID = "tblYarnItemCopyID" + pageId;
}

<div id="@pageId">
    <div class="row" id="@divTblId">
        <div class="col-sm-12">
            <div id="@toolbarId" class="master-toolbar">
                <button id="btnList" class="btn btn-success text-white btn-sm">
                    <i class="fa fa-hourglass"></i>&nbsp;Available List
                </button>
                <button id="btndraftList" class="btn btn-default btn-sm">
                    <i class="fa fa-list"></i>&nbsp;Draft List
                </button>
                <button id="btnCompleteList" class="btn btn-default btn-sm">
                    <i class="fa fa-list"></i>&nbsp;Complete List
                </button>

                <button id="btnRevisionList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-list"></i>&nbsp;Revision List
                </button>

                <button id="btnRejectList" class="btn btn-default btn-sm">
                    <i class="fa fa-ban"></i>&nbsp;Reject List
                </button>

                <button id="btnRefreshList" class="btn btn-default text-grey btn-sm">
                    <i class="fas fa-sync"></i>&nbsp;
                </button>
            </div>
        </div>
        <div class="col-sm-12" style="font-size:12px">
            <table id="@tblMasterId"></table>
        </div>
    </div>
    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="FCMRMasterID" name="FCMRMasterID" value="-1111" />
            <input type="hidden" id="ConceptID" name="ConceptID" />
            <input type="hidden" id="ConceptTypeID" name="ConceptTypeID" />
            <input type="hidden" id="RevisionNo" name="RevisionNo" />
            <div class="box-body" id="@divDetailsId" style="display:none">
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            General Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Concept No</label>
                                        <div class="col-sm-8">
                                            <input id="GroupConceptNo" name="GroupConceptNo" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Concept Date</label>
                                        <div class="col-sm-8">
                                            <input id="ConceptDate" name="ConceptDate" class="form-control input-sm" readonly />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Concept Type</label>
                                        <div class="col-sm-8">
                                            <input type="checkbox" style="margin:5px;" id="onlyFabric" name="onlyFabric" disabled />
                                            <label for="onlyFabric">Only Fabric</label>

                                            <input type="checkbox" style="margin:5px;" id="fabricOtherItem" name="fabricOtherItem" disabled />
                                            <label for="fabricOtherItem">Fabric & Flat Knit</label>

                                            <input type="checkbox" style="margin:5px;" id="onlyOtherItem" name="onlyOtherItem" disabled />
                                            <label for="onlyOtherItem">Only Flat Knit</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Require Date</label>
                                        <div class="col-sm-8">
                                            <input id="ReqDate" name="ReqDate" class="form-control input-sm ej2-datepicker" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Remarks</label>
                                        <div class="col-sm-8">
                                            <textarea id="Remarks" name="Remarks" rows="2" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-sm-12">
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <!--
                            <div class="col-sm-6">
                                <div class="panel panel-success" style="border-color:transparent; border-style:none;" id="divFabricItem">
                                    <div class="panel-heading">
                                        Product Information
                                    </div>
                                    <div class="form-group">
