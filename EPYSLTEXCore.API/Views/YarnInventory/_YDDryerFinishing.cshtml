<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
    localStorage.setItem("menuParam", "@ViewBag.MenuParam");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
}

<div id="@pageId">
    <input type="hidden" id="RequisitionPage" value="@ViewBag.RequisitionPage" />
    <input type="hidden" id="ApprovePage" value="@ViewBag.ApprovePage" />

    <div class="row" id="@divTblId">
        <div class="col-sm-12">
            <div id="@toolbarId" class="master-toolbar">
                <div>
                    <button id="btnPendingList" class="btn btn-success text-white btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Pending List
                    </button>
                    <button id="btnDraftList" class="btn btn-default text-grey btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Draft List
                    </button>
                    <button id="btnPendingApprovalList" class="btn btn-default text-grey btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Pending Approval
                    </button>
                    <button id="btnApproveList" class="btn btn-default text-grey btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Approved List
                    </button>
                    <button id="btnRejectList" class="btn btn-default text-grey btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Reject List
                    </button>
                </div>
            </div>
            <div style="font-size:12px">
                <table id="@tblMasterId"></table>
            </div>
        </div>
    </div>
    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="YDDryerFinishingMasterID" name="YDDryerFinishingMasterID" value="-1111" />
            <input type="hidden" id="YDBookingMasterID" name="YDBookingMasterID" />
            <input type="hidden" id="YDBatchID" name="YDBatchID" />
            <div class="box-body" id="@divDetailsId" style="display:none">
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            General Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Dryer Finishing No</label>
                                            <div class="col-sm-8">
                                                <input id="YDDryerFinishingNo" name="YDDryerFinishingNo" class="form-control input-sm" value="**<< NEW >>**" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Dryer Finishing Date</label>
                                            <div class="col-sm-8">
                                                <input id="YDDryerFinishingDate" name="YDDryerFinishingDate" class="form-control input-sm ej2-datepicker" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">YD Batch No</label>
                                            <div class="col-sm-8">
                                                <input id="YDBatchNo" name="YDBatchNo" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Company</label>
                                            <div class="col-sm-8">
                                                <input id="Company" name="Company" class="form-control input-sm" readonly />
                                            </div>
                                        </div>

                                        <div class="form-group" id="pnlRemarks">
                                            <label class="control-label col-sm-4 small">Remarks</label>
                                            <div class="col-sm-8">
                                                <textarea rows="2" id="Remarks" name="Remarks" class="form-control" placeholder="Enter additional notes"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group d-none" id="pnlRejectReason">
                                            <label class="control-label col-sm-4 small">Reject Reason</label>
                                            <div class="col-sm-8">
                                                <textarea rows="2" id="RejectReason" name="RejectReason" class="form-control" placeholder="Enter additional notes"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            Yarn Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblChildId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box-footer btn-e-float-margin" id="divFormButtons">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="pull-right">
                            <button type="button" class="btn btn-default m-w-120" id="btnCancel"><i class="fa fa-angle-double-left"></i>&nbsp;Back to List</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnSave"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
                            <button type="button" class="btn btn-success m-w-120" id="btnSaveAndSend"><i class="fa fa-check-square-o"></i>&nbsp;Save & Send for Approve</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnApprove"><i class="fa fa-save"></i>&nbsp;&nbsp;Approve</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnReject"><i class="fa fa-save"></i>&nbsp;&nbsp;Reject</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>




