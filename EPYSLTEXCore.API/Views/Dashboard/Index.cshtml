@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="container-fluid">
    <div class="row">
        <div class="col-12" style="padding-right:0px !important;padding-left: 0px !important;height: 36px;">
            <div class="box">
                <div class="box-body">
                    <div class="nav-tabs-custom" style="position: relative;">
                        <div class="nav-item dropdown show" style="float:left;width:7%;line-height: 20px;z-index: 10;background-color: lavender;">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Close</a>
                            <div class="dropdown-menu mt-0" style="left: 0px; right: inherit;">
                                <a id="btnCloseAllTabs" class="dropdown-item" href="#" data-type="all">Close All</a>
                                <a id="btnCloseAllOtherTabs" class="dropdown-item" href="#" data-type="all-other">Close All Other</a>
                            </div>
                        </div>
                        <div style="float:left;width:88%;position: relative;">
                            <button type="button" class="nav-link bg-light menu-move-btn" id="btnRightMenu" style="float:left;">
                                <i class="fas fa-angle-double-left"></i>
                            </button>
                            <button type="button" class="nav-link bg-light menu-move-btn" id="btnLeftMenu" style="right:0;">
                                <i class="fas fa-angle-double-right"></i>
                            </button>
                            <div class="menu-box" style="margin-left: 46px;">
                                <ul class="nav nav-tabs" id="mainTab">
                                    <li class="p-2 active text-sm tabLi bg-info" tabIndex="0" style="box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);"><a href="#dashboard" data-toggle="tab" aria-expanded="true" style="line-height: 23px !important;">Dashboard</a></li>
                                </ul>
                            </div>
                        </div>
                        <div style="float:right;width:5%;line-height: 20px;z-index: 10;position: relative;">
                            <a id="btnSetScreenSize" status="normal" class="nav-link bg-light" href="#" style="text-align: center;"><i class="fas fa-expand"></i></a>
                        </div>
                    </div>
                    <div class="tab-content" id="mainTabContent">
                        <div class="tab-pane active" id="dashboard"></div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>


</section>
