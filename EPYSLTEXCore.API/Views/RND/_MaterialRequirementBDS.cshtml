                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>*@

                <div class="col-sm-12" id="divFabricInfo">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            Yarn Information
                            <button type="button" id="addYarnComposition" class="btn btn-success btn-xs">
                                <i class="fa fa-plus"></i>&nbsp;&nbsp; Add Composition
                            </button>
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblChildId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12" id="divOtherItem">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading" style="background-color: #f5f5f5;">
                            <div class="row">
                                <div class="col-sm-6 d-flex align-items-center" style="margin: 5px 0;">
                                    <label style="font-weight: bold; font-size: 14px; margin: 0;">Collar Information</label>
                                </div>

                                <div class="col-sm-6 d-flex justify-content-end align-items-center" style="gap: 10px;">
                                    <label style="font-size: 12px; margin: 0;">Size:</label>
                                    <select id="CollarSizeID" name="CollarSizeID" class="form-control"
                                            style="height: 28px; width: 120px; padding: 0 5px;">
                                    </select>

                                    <label style="font-size: 12px; margin: 0;">Consumption(gm):</label>
                                    <input type="number" id="CollarWeightInGm" name="CollarWeightInGm" class="form-control"
                                           placeholder="0" style="height: 28px; width: 80px; padding: 0 5px;">

                                    <button type="button" id="btnCollarApplyKG" class="btn btn-success btn-sm" style="height: 28px;">
                                        Apply
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblOtherItemId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12" id="divCuffItem">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading" style="background-color: #f5f5f5;">
                            <div class="row">
                                <div class="col-sm-6 d-flex align-items-center" style="margin: 5px 0;">
                                    <label style="font-weight: bold; font-size: 14px; margin: 0;">Cuff Information</label>
                                </div>

                                <div class="col-sm-6 d-flex justify-content-end align-items-center" style="gap: 10px;">
                                    <label style="font-size: 12px; margin: 0;">Size:</label>
                                    <select id="CuffSizeID" name="CuffSizeID" class="form-control"
                                            style="height: 28px; width: 120px; padding: 0 5px;">
                                    </select>

                                    <label style="font-size: 12px; margin: 0;">Consumption(gm):</label>
                                    <input type="number" id="CuffWeightInGm" name="CuffWeightInGm" class="form-control"
                                           placeholder="0" style="height: 28px; width: 80px; padding: 0 5px;">

                                    <button type="button" id="btnCuffApplyKG" class="btn btn-success btn-sm" style="height: 28px;">
                                        Apply
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblCuffItemId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="modal fade" tabindex="-1" role="dialog" id="modal-new-composition-@pageId" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Create New Composition</h4>
                            </div>
                            <div class="modal-body" style="padding: 0 15px">
                                <div class="icheck-primary icheck-inline">
                                    <input type="radio" id="non-blended" name="Blended" value="0" checked />
                                    <label for="non-blended">Non Blended</label>
                                </div>
                                <div class="icheck-primary icheck-inline">
                                    <input type="radio" id="blended" name="Blended" value="1" />
                                    <label for="blended">Blended</label>
                                </div>
                                <table id="tblCreateComposition-@pageId"></table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default m-w-100" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary m-w-100" id="btnAddComposition">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer btn-e-float-margin" id="divFormButtons">
                    <<div class="row">
                        <div class="col-md-12 text-right">
                            <button type="button" class="btn btn-default m-w-120" id="btnCancel"><i class="fa fa-angle-double-left"></i>&nbsp;Back to List</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnSave"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnSaveComplete"><i class="fa fa-save"></i>&nbsp;&nbsp;Save&Complete</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnRevise"><i class="fa fa-save"></i>&nbsp;&nbsp;Revise</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnAcknowledge"><i class="fa fa-save"></i>&nbsp;&nbsp;Acknowledge</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnAcknowledgeAutoPR"><i class="fa fa-save"></i>&nbsp;&nbsp;Acknowledge for Auto PR</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>