<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
}

<div id="@pageId">
    <div class="row" id="@divTblId">
        <div class="col-sm-12">
            <div id="@toolbarId">
                <div>
                    <button id="btnPending" class="btn btn-success text-white btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Available For Return
                    </button>
                    <button id="btnList" class="btn btn-default text-grey btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Return Lists
                    </button>
                </div>
                <div style="margin:10px 0 10px 0;" class="divCreate btnTootBar">
                    <button id="btnCreate" class="btn btn-primary btn-sm btnExtra">
                        <i class="fa fa-plus"></i>&nbsp;Create
                    </button>
                </div>
            </div>
        </div>
        <div class="col-sm-12" style="font-size:12px">
            <table id="@tblMasterId"></table>
        </div>
    </div>
    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="QCReturnMasterID" name="QCReturnMasterID" value="-1111" />
            <input type="hidden" name="QCRemarksMasterID" id="QCRemarksMasterID" />
            <input type="hidden" name="QCReqMasterID" id="QCReqMasterID" />

            <div class="card card-default" id="@divDetailsId" style="display:none">
                
                <div class="card-body">
                    <div class="card" style="border-color:transparent; border-style:none;">
                        <div class="card-header">
                            <h3 class="card-title"> General/Commercial Information </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <!-- Row 1 -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Return No</label>
                                        <input id="QCReturnNo" name="QCReturnNo" class="form-control input-sm" readonly />
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Requisition No</label>
                                        <input id="QCReqNo" name="QCReqNo" class="form-control input-sm" value="" readonly />
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Return Date</label>
                                        <input id="QCReturnDate" name="QCReturnDate" class="form-control input-sm" readonly />
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Requisition Date</label>
                                         <input id="QCReqDate" name="QCReqDate" class="form-control input-sm" readonly />
                                    </div>

                                     <div class="form-group">
                                         <label>Received No</label>
                                         <input id="QCReceiveNo" name="QCReceiveNo" class="form-control input-sm" value="" readonly />
                                     </div>

                                     <div class="form-group">
                                         <label>Received Date</label>
                                         <input id="QCReceiveDate" name="QCReceiveDate" class="form-control input-sm" readonly />
                                     </div>

                                     <div class="form-group">
                                         <label>Requisition For</label>
                                         <input id="QCReqFor" name="QCReqFor" class="form-control input-sm" value="" readonly />
                                     </div>
                                </div>
                            </div>    
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            Item Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblChildId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box-footer btn-e-float-margin" id="divFormButtons">
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <button type="button" class="btn btn-default m-w-120" id="btnCancel">
                                <i class="fa fa-angle-double-left"></i>&nbsp;Back to List
                            </button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnSave">
                                <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
