<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
    localStorage.setItem("menuParam", "@ViewBag.MenuParam");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var tblColorChildId = "tblColorChild" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
    var tblOtherItemId = "tblOtherItem" + pageId;
    var tblCuffItemId = "tblCuffItem" + pageId;
}

<div id="@pageId">
    <div class="row" id="@divTblId">
        <div class="col-sm-12">
            <div id="@toolbarId" class="master-toolbar">
                <button id="btnList" class="btn btn-success text-white btn-sm">
                    <i class="fa fa-hourglass"></i>&nbsp;Available List
                </button>
                <button id="btnDraftList" class="btn btn-default btn-sm">
                    <i class="fa fa-list"></i>&nbsp;Draft List
                </button>
                <button id="btnCompleteList" class="btn btn-default btn-sm">
                    <i class="fa fa-list"></i>&nbsp;<span>Complete List</span>
                </button>
                <button id="btnAckList" class="btn btn-default btn-sm">
                    <i class="fa fa-list"></i>&nbsp;Acknowledge List
                </button>
                <button id="btnRevisionList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-list"></i>&nbsp;Revision List
                </button>

                @*<button id="btnRevisionAckList" class="btn btn-default text-grey btn-sm">
                        <i class="fa fa-list"></i>&nbsp;Revision Acknowledge List
                    </button>*@

                <button id="btnRefreshList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-refresh"></i>&nbsp;
                </button>
            </div>
        </div>
        <div class="col-sm-12" style="font-size:12px">
            <table id="@tblMasterId"></table>
        </div>
    </div>

    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="FCMRMasterID" name="FCMRMasterID" value="-1111" />
            <input type="hidden" id="BookingID" name="BookingID" />
            <input type="hidden" id="FabricID" name="FabricID" />
            <input type="hidden" id="GroupConceptNo" name="GroupConceptNo" />
            <input type="hidden" id="YBookingNo" name="YBookingNo" />

            <div class="card card-default" id="@divDetailsId" style="display:none">
                <div class="card-body">
                    <div class="card" style="border-color:transparent; border-style:none;">
                        <div class="card-header">
                            <h3 class="card-title"> General Information </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <!-- Row 1 -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Booking No</label>
                                        <div class="col-sm-8">
                                            <input id="BookingNo" name="BookingNo" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Booking Date</label>
                                        <div class="col-sm-8">
                                            <input id="BookingDate" name="BookingDate" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Buyer</label>
                                        <div class="col-sm-8">
                                            <input id="BuyerName" name="BuyerName" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Remarks</label>
                                        <div class="col-sm-8">
                                            <textarea id="Remarks" name="Remarks" rows="2" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                         <label class="control-label col-sm-4 small">Type</label>
                                         <div class="col-sm-8">
                                             <input type="checkbox" style="margin:5px;" id="onlyFabric" name="onlyFabric" disabled />
                                             <label for="onlyFabric">Fabric Item</label>

                                             <input type="checkbox" style="margin:5px;" id="fabricOtherItem" name="fabricOtherItem" disabled />
                                             <label for="fabricOtherItem">Collar Item</label>

                                             <input type="checkbox" style="margin:5px;" id="onlyOtherItem" name="onlyOtherItem" disabled />
                                             <label for="onlyOtherItem">Cuff Item</label>
                                         </div>
                                    </div>
                                </div>
                                <div id="divRetrial" class="d-none">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Trial/Re-Trial No</label>
                                        <div class="col-sm-8">
                                            <input id="TrialNo" name="TrialNo" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Trial/Re-Trial Date</label>
                                        <div class="col-sm-8">
                                            <input id="TrialDate" name="TrialDate" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>   
                        </div>
                    </div>
                </div>

                @*<div id="divFabricItem">
                        <div class="col-sm-12">
                            <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                                <div class="panel-heading">
                                    Product Information
                                </div>
                                <div class="panel-body">
                                    <div class="form-horizontal">
