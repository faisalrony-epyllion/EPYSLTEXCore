<script type="text/javascript">
	localStorage.setItem("pageName", "@ViewBag.PageName");
	localStorage.setItem("menuId", "@ViewBag.MenuId");
</script>

@{
	var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
	var divTblId = "divtbl" + pageId;
	var toolbarId = "toolbar" + pageId;
	var tblMasterId = "tbl" + pageId;
	var formId = "form" + pageId;
	var divDetailsId = "divDetails" + pageId;
}
<div id="@pageId">
	<div class="row">
		<form class="form-horizontal" id="@formId">
			<input type="hidden" id="ROSID" name="ROSID" value="-1111" />
			<input type="hidden" id="ItemMasterID" name="ItemMasterID" />
			<input type="hidden" id="SubGroupID" name="SubGroupID" />
			<div class="box-body" id="@divDetailsId">

				<div class="col-sm-12">
					<div class="panel panel-success" style="border-color:transparent; border-style:none;">
						<div class="panel-heading">
							Item Master Re-Order Status
						</div>
						<div class="panel-body">
							<div class="form-horizontal">
								<div class="col-sm-6">
									<div class="form-group">
										<label class="control-label col-sm-4 small">Item Master</label>
										<div class="col-sm-8">
											<input id="ItemName" name="ItemName" class="form-control form-control-sm input-with-single-button" readonly />
											<button id="btnAddItemMaster" class="btn btn-sm btn-success" type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
										</div>
									</div>
								</div>

								<div class="col-sm-6">
									<div class="form-group">
										<label class="control-label col-sm-4 small">Company</label>
										<div class="col-sm-8">
											<select id="CompanyID" name="CompanyID" class="form-control form-control-sm" style="width:100%"></select>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-sm-12">
					<div class="panel panel-success" style="border-color: transparent; border-style: none;">
						<div class="panel-heading">
							Item Information
						</div>
						<div class="panel-body">
							<div class="form-horizontal">
								<div class="col-sm-12">
									<div class="form-group">
										<div id='Grid'></div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<script id='dialogtemplate' type="text/x-template">
				<div>
					<div class="form-row">
						<div class="form-group col-md-12">
							<div class="e-float-input e-control-wrapper">
								<input id="ItemMaster_Finder" name="ItemMaster_Finder" type="text" readonly/>
								<span class="e-float-line"></span>
								<label class="e-float-text e-label-top" for="Cone">Item Name</label>
							</div>
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<div class="e-float-input e-control-wrapper">
								<input id="MonthlyAvgConsumption" name="MonthlyAvgConsumption" type="number" value=""/>
								<span class="e-float-line"></span>
								<label class="e-float-text e-label-top" for="Cone">Monthly Avg Consumption</label>
							</div>
						</div>
						<div class="form-group col-md-6">
						<div class="e-float-input e-control-wrapper">
								<input id="LeadTimeDays" name="LeadTimeDays" type="number" value=""/>
								<span class="e-float-line"></span>
								<label class="e-float-text e-label-top" for="LeadTimeDays">Lead Time Days</label>
							</div>
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<div class="e-float-input e-control-wrapper">
								<input id="SafetyStockDays" name="SafetyStockDays" type="number" value=""/>
								<span class="e-float-line"></span>
								<label class="e-float-text e-label-top" for="Cone">Safety Stock Days</label>
							</div>
						</div>
						<div class="form-group col-md-6">
						<div class="e-float-input e-control-wrapper">
								<input id="MonthlyWorkingDays" name="MonthlyWorkingDays" type="number" value=""/>
								<span class="e-float-line"></span>
								<label class="e-float-text e-label-top" for="MonthlyWorkingDays">Monthly Working Days</label>
							</div>
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<div class="e-float-input e-control-wrapper">
								<input id="PackSize" name="PackSize" type="number" value=""/>
								<span class="e-float-line"></span>
								<label class="e-float-text e-label-top" for="Cone">Pack Size</label>
							</div>
						</div>
						<div class="form-group col-md-6">
						<div class="e-float-input e-control-wrapper">
								<input id="MOQ" name="MOQ" type="number" value=""/>
								<span class="e-float-line"></span>
								<label class="e-float-text e-label-top" for="MOQ">MOQ</label>
							</div>
						</div>
					</div>
				</div>
			</script>
		</form>
	</div>

</div>


