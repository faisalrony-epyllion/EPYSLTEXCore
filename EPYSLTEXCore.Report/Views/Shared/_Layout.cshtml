@{
    var version = Guid.NewGuid().ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Report ERP</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="https://localhost:7053//bundle/css/site-bundle.min.css" rel="stylesheet" />
    <script src="https://localhost:7053//bundle/js/site-bundle.min.js"></script>

    @RenderSection("styles", false)
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/Content/Images/Big-Logo.png" alt="AdminLTELogo" height="250" width="350">
        </div>
        <nav class="main-header navbar navbar-expand navbar-white navbar-light p-0">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars fa-lg"></i></a>
                </li>

            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link text-info" href="#" role="button">
                        <i class="fa fa-question-circle-o fa-lg"></i>
                    </a>

                </li>


                <li class="nav-item">
                    <a class="nav-link text-danger fa-lg" data-widget="fullscreen" href="#" role="button">
                        <i class="fa fa-expand"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link fa-lg" data-toggle="dropdown">
                        <i class="nav-icon fa fa-cog text-primary"></i>
                        <span class="caret"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a href="#!"
                           class="dropdown-item"
                           data-controller-name="Account"
                           data-action-name="Profile"
                           onclick="clickAccountNavigation(event);">
                            <i class="fa fa-user text-info mr-2"></i> Profile
                        </a>
                        <a href="#!"
                           class="dropdown-item"
                           data-controller-name="Account"
                           data-action-name="ChangePasswordPartial"
                           onclick="clickAccountNavigation(event);">
                            <i class="fa fa-user-secret text-warning mr-2"></i> Change Password
                        </a>
                        <div class="dropdown-divider"></div>
                        <a role="button" class="dropdown-item" onclick="logout()">
                            <i class="fa fa-sign-out text-danger mr-2"></i> Logout
                        </a>
                    </div>
                </li>


            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Header -->
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Content/Images/logo.png" class="brand-image elevation-3" style="opacity:1">
                <span class="brand-text font-weight-light">EPY</span>

            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-1 pb-1 mb-1 d-flex">
                    <div class="image">
                        <img src="@ViewBag.ProfilePic" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@ViewBag.EmployeeName</a>
                    </div>
                </div>



                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="sidebar-menu nav nav-pills nav-sidebar flex-column text-sm" style="padding: .1rem .1rem !important;" data-widget="treeview" role="menu" data-accordion="false"></ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!--Hidden Fields-->
            <input type="hidden" id="hidComboBoxSource" value="@ViewBag.hidComboBoxSource" />
            <input type="hidden" id="versionNumer" value="@Guid.NewGuid()" />
            <input type="hidden" id="isSuperUser" value="@ViewBag.IsSuperUser" />
            <!--End of Hidden Fields-->
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer center p-0">
            <p class="text-center">
                <strong>Copyright &copy; <a target="_blank" href="https://www.epylliongroup.com">Epyllion Group</a>.</strong> All rights reserved.
            </p>
        </footer>
    </div>
    <!-- ./wrapper -->

    <script src="https://localhost:7053/Scripts/common/common-helpers.js?version=@version"></script>  
    <script src="~/Scripts/common/app-report.js"></script>
    <script src="https://localhost:7053//Scripts/common/common-methods.js?version=@version"></script>
    <script src="https://localhost:7053//Scripts/common/ikr.table2excel.js?version=@version"></script>
    @RenderSection("scripts", false)
</body>
</html>