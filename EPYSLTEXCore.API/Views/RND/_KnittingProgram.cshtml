<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
    localStorage.setItem("menuParam", "@ViewBag.MenuParam");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var menuParam = ViewBag.MenuParam;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
    var knittingPlanYarnTblId = "tblKnittingPlanYarn" + pageId;
}

<div id="@pageId">
    <input type="hidden" id="ConceptPage" value="@ViewBag.ConceptPage" />
    <input type="hidden" id="BDSPage" value="@ViewBag.BDSPage" />
    <input type="hidden" id="BulkPage" value="@ViewBag.BulkPage" />
    <input id="txtMenuParam" value="@menuParam" type="hidden" />

    @*<input type="hidden" id="BDSPage" value="@ViewBag.BDSPage" />*@

    <div class="row" id="@divTblId">
        <div class="col-sm-12" style="font-size:12px">
            <div class="master-toolbar" role="group" aria-label="..." id="@toolbarId">
                <button id="btnPending" class="btn btn-success text-white btn-sm">
                    <i class="fa fa-plus"></i>&nbsp;Pending
                </button>
                <button id="btnActiveList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-check"></i>&nbsp;Active
                </button>
                <button id="btnInActiveList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-ban"></i>&nbsp;In Active
                </button>
                <button id="btnAllList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-list"></i>&nbsp;All
                </button>
            </div>
            <table id="@tblMasterId"></table>
        </div>
    </div>
    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="KPMasterID" name="KPMasterID" value="-1111" />
            <input type="hidden" name="BAnalysisID" id="BAnalysisID" />
            <input type="hidden" name="BuyerID" id="BuyerID" />
            <input type="hidden" name="BuyerTeamID" id="BuyerTeamID" />
            <input type="hidden" name="ExportOrderID" id="ExportOrderID" />
            <input type="hidden" name="SeasonID" id="SeasonID" />
            <input type="hidden" name="CompanyID" id="CompanyID" />
            <input type="hidden" name="MerchandiserTeamID" id="MerchandiserTeamID" />
            <input type="hidden" name="ConceptID" id="ConceptID" />
            <input type="hidden" name="RevisionPending" id="RevisionPending" />
            <input type="hidden" name="MCSubClassID" id="MCSubClassID" />
            <input type="hidden" name="PreProcessRevNo" id="PreProcessRevNo" />
            <input type="hidden" name="RevisionNo" id="RevisionNo" />
            <input type="hidden" name="GroupConceptNo" id="GroupConceptNo" />
            <input type="hidden" name="IsBDS" id="IsBDS" />
            <input type="hidden" name="ItemMasterID" id="ItemMasterID" />

            <div class="box-body" id="@divDetailsId" style="display:none">
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            General/Commercial Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-10">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Req. Delivery Date</label>
                                            <div class="col-sm-8">
                                                <input id="ReqDeliveryDate" name="ReqDeliveryDate" class="form-control input-sm ej2-datepicker" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Sub Group</label>
                                            <div class="col-sm-8">
                                                <input id="SubGroupName" name="SubGroupName" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small lblPlanQty">Plan Qty</label>
                                            <div class="col-sm-8">
                                                <input id="TotalQty" name="TotalQty" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Remaining Qty</label>
                                            <div class="col-sm-8">
                                                <input id="RemainingQty" name="RemainingQty" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small"></label>
                                            <div class="col-sm-8">
                                                <input type="checkbox" style="margin:5px;" id="IsSubContact" name="IsSubContact" value="1" />
                                                <label for="IsSubContact">Sub Contact?</label>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group cPlan">
                                            <label class="control-label col-sm-4 small lblConceptNo">Concept No</label>
                                            <div class="col-sm-8">
                                                <input id="ConceptNo" name="ConceptNo" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Machine Type</label>
                                            <div class="col-sm-8">
                                                <input id="MCSubClass" name="MCSubClass" class="form-control input-sm" style="float:left;width:82%" readonly />
                                                <button type="button" id="btnMachineType" class="fa fa-eye" style="float:left;height:24px">
                                                </button>
                                            </div>
                                        </div>
                                        <div class="form-group bds">
                                            <label class="control-label col-sm-4 small">Buyer</label>
                                            <div class="col-sm-8">
                                                <input id="Buyer" name="Buyer" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group bds">
                                            <label class="control-label col-sm-4 small">Buyer Team</label>
                                            <div class="col-sm-8">
                                                <input id="BuyerTeam" name="BuyerTeam" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group clsKPBulk">
                                            <label class="control-label col-sm-4 small">Booking Qty</label>
                                            <div class="col-sm-8">
                                                <input id="BookingQty" name="BookingQty" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small lblConceptQty">Concept Qty</label>
                                            <div class="col-sm-8">
                                                <input id="Qty" name="Qty" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-6 small">Pre-finishing process?</label>
                                            <div class="col-sm-6">
                                                <div style="float:left;" class="icheck-primary icheck-inline">
                                                    <input type="radio" id="need-yes" name="NeedPreFinishingProcess" value="true" checked />
                                                    <label for="need-yes">Yes</label>
                                                </div>
                                                <div style="float:left;" class="icheck-primary icheck-inline">
                                                    <input type="radio" id="need-no" name="NeedPreFinishingProcess" value="false" />
                                                    <label for="need-no">No</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group" style="display:none">
                                            <label class="control-label col-sm-4 small">TotalPlanedQty</label>
                                            <div class="col-sm-8">
                                                <input id="TotalPlanedQty" name="TotalPlanedQty" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group" id="divLength">
                                            <label class="control-label col-sm-4 small">Length</label>
                                            <div class="col-sm-8">
                                                <input id="Length" name="Length" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group" id="divWidth">
                                            <label class="control-label col-sm-4 small">Width</label>
                                            <div class="col-sm-8">
                                                <input id="Width" name="Width" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group cPlan">
                                            <label class="control-label col-sm-4 small lblConceptDate">Concept Date</label>
                                            <div class="col-sm-8">
                                                <input id="ConceptDate" name="ConceptDate" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group" id="divComposition">
                                            <label class="control-label col-sm-4 small">Composition</label>
                                            <div class="col-sm-8">
                                                <input id="Composition" name="Composition" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div id="divColorName" class="form-group bds">
                                            <label class="control-label col-sm-4 small">Color</label>
                                            <div class="col-sm-8">
                                                <input id="ColorName" name="ColorName" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group" id="divGSM">
                                            <label class="control-label col-sm-4 small">GSM</label>
                                            <div class="col-sm-8">
                                                <input id="GSM" name="GSM" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group" style="display:none">
                                            <label class="control-label col-sm-4 small">RowPlanedQty</label>
                                            <div class="col-sm-8">
                                                <input id="RowPlanedQty" name="RowPlanedQty" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4 small">Technical Name</label>
                                            <div class="col-sm-8">
                                                <input id="TechnicalName" name="TechnicalName" class="form-control input-sm" readonly />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <input id="UploadFile" type="file" class="file" multiple name="UploadFile" accept=".xlsx,.xls,image/*,.doc,.docx,.pdf">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-success" id="divFabricInformation" style="border-color:transparent; border-style:none">
                    <div class="panel-heading">
                        Program Information &nbsp; &nbsp;
                        <button type="button" id="btnSelectMachine" class="btn btn-success btn-xs">
                            Select Machine
                        </button>
                        &nbsp; &nbsp;
                        <button type="button" id="btnCopyProgram" class="btn btn-success btn-xs">
                            Copy From Another Program
                        </button>
                    </div>
                    <div class="panel-body">
                        <div>
                            <table id="tblProgramInformation" class="table table-sm"></table>
                        </div>

                    </div>
                </div>

                <div class="panel panel-success" id="divKnittingPlanYarn" style="border-color:transparent; border-style:none">
                    <div class="panel-heading">
                        Yarn Information
                    </div>
                    <div class="panel-body">
                        <div>
                            <table id="@knittingPlanYarnTblId" class="table table-sm"></table>
                        </div>

                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="box-footer btn-e-float-margin" id="divFormButtons">
                        <div class="pull-right pull-right-mb">
                            <button type="button" class="btn btn-default m-w-120" id="btnCancel"><i class="fa fa-angle-double-left"></i>&nbsp;Back to List</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnSave"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnRevise"><i class="fa fa-save"></i>&nbsp;&nbsp;Revise</button>
                            <button type="button" class="btn btn-success m-w-120" id="btnReviseAndComplete"><i class="fa fa-save"></i>&nbsp;&nbsp;Revise & Complete</button>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
