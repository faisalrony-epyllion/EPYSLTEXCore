@using EPYSLTEXCore.API.Models.Security
@model LoginBindingModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@if (ViewBag.EmailSent == true)
{
    <div class="alert alert-success text-start">
        <h6>A confirmation email has been sent to your <strong>@ViewBag.Email</strong></h6>
        <p>Please check your email for further instructions.</p>
    </div>
}
<h4 class="mb-0">
    <span class="d-block">Welcome to Textile ERP</span>
    <span id="sign-in-span">Please sign in to your account.</span>
    <span id="forgot-span" style="display:none">Please enter your Username and Email.</span>
</h4>
<div class="divider row"></div>

<div class="" id="sign-in">
    <form class="" id="login-form">
    <div class="form-row">
        <div class="col-md-6">
            <div class="position-relative form-group">
             
                <label for="name" class="">Username</label>
                <input id="name" type="text" class="form-control" name="Username" value="@ViewBag.UserName" placeholder="Enter your username">
            </div>
        </div>
        <div class="col-md-6">
            <div class="position-relative form-group">
                <input type="hidden" name="grant_type" value="password" />
                <label for="password" class="">Password</label>              
                <input id="password" type="password" class="form-control" name="Password" value="@ViewBag.Password" placeholder="Enter your password">
            </div>
        </div>
    </div>
        </br>
    <div class="divider row"></div>
    <div class="d-flex align-items-center">
        <div class="ml-auto">
            <a onclick="changeForm(0)" class="text-primary text-decoration-none">Forgot Password?</a>&nbsp;
            <button id="btn-signin" type="submit" class="btn btn-primary btn-lg">Login</button>
        </div>
    </div>
</form>
</div>
<div class="" id="forgot-password" style="display:none">
    <form class="" id="forgot-password-form">
    <div class="form-row">
        <div class="col-md-6">
            <div class="position-relative form-group">
                <label for="username" class="form-label">Username</label>
                <input id="username" type="text" class="form-control" name="Username" value="@ViewBag.UserName" placeholder="Enter your username">
            </div>
        </div>
        <div class="col-md-6">
            <div class="position-relative form-group">
                <label for="email" class="form-label">Email </label>
                <input id="email" type="text" class="form-control" name="email" value="@ViewBag.Password" placeholder="Enter your Email">
            </div>
        </div>
    </div>
    </br>
    <div class="divider row"></div>
    <div class="d-flex align-items-center">
        <div class="ml-auto">
            <a onclick="changeForm(1)" class="text-primary text-decoration-none">Go to Log In</a>
            <button id="btn-forgot-password" type="submit" class="btn btn-primary btn-bg">Retrieve Password</button>
        </div>
    </div>
    </form>
</div>
