                <div class="modal fade" tabindex="-1" role="dialog" id="modal-new-composition-@pageId" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Create New Composition</h4>
                            </div>
                            <div class="modal-body" style="padding: 0 15px">
                                <div class="icheck-primary icheck-inline">
                                    <input type="radio" id="non-blended" name="Blended" value="0" checked />
                                    <label for="non-blended">Non Blended</label>
                                </div>
                                <div class="icheck-primary icheck-inline">
                                    <input type="radio" id="blended" name="Blended" value="1" />
                                    <label for="blended">Blended</label>
                                </div>
                                <table id="tblCreateComposition-@pageId"></table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default m-w-100" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary m-w-100" id="btnAddComposition">Add</button>
