<script type="text/javascript">
    localStorage.setItem("pageName", "@ViewBag.PageName");
    localStorage.setItem("menuId", "@ViewBag.MenuId");
    localStorage.setItem("YDReqPage", "@ViewBag.YDReqPage");
    localStorage.setItem("menuParam", "@ViewBag.MenuParam");
</script>

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divTblId = "divtbl" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divDetailsId = "divDetails" + pageId;
}

<div id="@pageId">
    <div class="row" id="@divTblId">
        <div class="col-sm-12">
            <div id="@toolbarId">
                <button id="btnPending" class="btn btn-success text-white btn-sm">
                    <i class="fa fa-hourglass"></i>&nbsp;Pending YD Requisition
                </button>
                <button id="btnList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-list"></i>&nbsp;YD Requisition Lists
                </button>
                <button id="btnPendingApprovalList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-hourglass"></i>&nbsp;Pending Approval
                </button>
                <button id="btnApprovedList" class="btn btn-default text-grey btn-sm">
                    <i class="fa fa-list"></i>&nbsp;Approved Lists
                </button>
            </div>
        </div>
        <div class="col-sm-12" style="font-size:12px">
            <table id="@tblMasterId"></table>
        </div>
    </div>
    <div class="row">
        <form class="form-horizontal" id="@formId">
            <input type="hidden" id="YDReqMasterID" name="YDReqMasterID" value="-1111" />
            <input type="hidden" id="BuyerID" name="BuyerID" />
            <input type="hidden" id="CompanyId" name="CompanyId" />
            <input type="hidden" id="YDBookingMasterID" name="YDBookingMasterID" />

            <div class="box-body" id="@divDetailsId" style="display:none">
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            General Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Requisition No</label>
                                        <div class="col-sm-8">
                                            <input id="YDReqNo" name="YDReqNo" class="form-control input-sm" readonly />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Requisition Date</label>
                                        <div class="col-sm-8">
                                            <input id="YDReqDate" name="YDReqDate" class="form-control input-sm ej2-datepicker" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Booking No</label>
                                        <div class="col-sm-8">
                                            <input id="ConceptNo" name="ConceptNo" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Buyer</label>
                                        <div class="col-sm-8">
                                            <input id="BuyerName" name="BuyerName" class="form-control input-sm" readonly />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small"> YD Booking No</label>
                                        <div class="col-sm-8">
                                            <input id="YDBookingNo" name="YDBookingNo" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Booking Date</label>
                                        <div class="col-sm-8">
                                            <input id="YDBookingDate" name="YDBookingDate" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="panel panel-success" style="border-color:transparent; border-style:none;">
                        <div class="panel-heading">
                            Item Information
                        </div>
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <table id="@tblChildId"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box-footer btn-e-float-margin" id="divFormButtons">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="pull-right">
                            <button type="button" class="btn btn-default m-w-120" id="btnCancel"><i class="fa fa-angle-double-left"></i>&nbsp;Back to List</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnSave"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
                            <button type="button" class="btn btn-primary m-w-120" id="btnApprove"><i class="fa fa-save"></i>&nbsp;&nbsp;Approve</button>
                            <button type="button" class="btn btn-danger m-w-120" id="btnReject"><i class="fa fa-save"></i>&nbsp;&nbsp;Reject</button>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
