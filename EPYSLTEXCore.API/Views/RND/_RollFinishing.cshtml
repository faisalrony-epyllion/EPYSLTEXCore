                                    <div class="form-group" id="divComposition">
                                        <label class="control-label col-sm-4 small">Composition</label>
                                        <div class="col-sm-8">
                                            <input id="Composition" name="Composition" class="form-control input-sm" readonly />
                                        </div>
                                    </div>

                                    <div class="form-group" id="divLength">
                                        <label class="control-label col-sm-4 small">Length</label>
                                        <div class="col-sm-8">
                                            <input id="Length" name="Length" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Start Time</label>
                                        <div class="col-sm-8">
                                            <input id="BatchStartTime" name="BatchStartTime" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">End Time</label>
                                        <div class="col-sm-8">
                                            <input id="BatchEndTime" name="BatchEndTime" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4 small">Machine Type</label>
                                        <div class="col-sm-8">
                                            <input id="KnittingType" name="KnittingType" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group" id="divGsm">
                                        <label class="control-label col-sm-4 small">Gsm</label>
                                        <div class="col-sm-8">
                                            <input id="Gsm" name="Gsm" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group" id="divWidth">
                                        <label class="control-label col-sm-4 small">Height</label>
                                        <div class="col-sm-8">
                                            <input id="Width" name="Width" class="form-control input-sm" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-success col-sm-5" style="border-color:transparent; border-style:none;">
                    <div class="panel-heading">
                        Finishing Process
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <table id="@tblChildId"></table>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary m-w-120" id="btnUpdateProcess"><i class="fa fa-save"></i>&nbsp;&nbsp;Update Process</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="divProcessProduction" class="panel panel-success col-sm-7" style="border-color:transparent; border-style:none;">
                    <div class="panel-heading">
                        Finishing Process Information
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Process</label>
                                    <div class="col-sm-8">
                                        <input id="ProcessName" name="ProcessName" class="form-control input-sm" readonly />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Shift</label>
                                    <div class="col-sm-8">
                                        <select id="ShiftID" name="ShiftID" class="form-control input-sm" style="width:100%"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Plan Machine No</label>
                                    <div class="col-sm-8">
                                        <input id="MachineNo" name="MachineNo" class="form-control input-sm" readonly />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Brand</label>
                                    <div class="col-sm-8">
                                        <input id="BrandName" name="BrandName" class="form-control input-sm" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Prod. Date</label>
                                    <div class="col-sm-8">
                                        <input id="ProdDate" name="ProdDate" class="form-control input-sm ej2-datepicker" readonly />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Operator</label>
                                    <div class="col-sm-8">
                                        <select id="OperatorID" name="OperatorID" class="form-control input-sm" style="width:100%"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Prod. Machine No</label>
                                    <div class="col-sm-8">
                                        <input id="PMachineNo" name="PMachineNo" class="form-control input-sm" readonly />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4 small">Unit</label>
                                    <div class="col-sm-8">
                                        <input id="UnitName" name="UnitName" class="form-control input-sm" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="form-horizontal">
                            <button type="button" id="btnSelectMachine" class="btn btn-success btn-xs">
                                <i class="fa fa-search"></i>&nbsp;&nbsp;Select Machine
                            </button>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <table id="@tblMachineInfoId"></table>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary m-w-120" id="btnProductionComplete"><i class="fa fa-save"></i>&nbsp;&nbsp;Production Complete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

